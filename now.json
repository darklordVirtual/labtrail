{
	"version": 2,
	"name": "LabTrail",
    "env": {
        "MONGODB_URI": "@mongodb_uri"
    },
	"builds": [
        { 
			"src": "authserver/index.js", 
			"use": "@now/node"
		},
		{ 
			"src": "apolloserver/index.js", 
			"use": "@now/node"
		},
		{
			"src": "app/package.json",
			"use": "@now/static-build",
			"config": { "distDir": "build" }
		}
	],
	"routes": [
		{
			"src": "/graphql",
			"dest": "apolloserver/index.js"
        },
        {
			"src": "/sso/(.*)",
			"dest": "authserver/index.js"
		},
		{
			"src": "/static/(.*)",
			"headers": { "cache-control": "s-maxage=31536000,immutable" },
			"dest": "app/static/$1"
		},
		{ "src": "/favicon.ico", "dest": "app/favicon.ico" },
		{ "src": "/asset-manifest.json", "dest": "app/asset-manifest.json" },
		{ "src": "/manifest.json", "dest": "app/manifest.json" },
		{ "src": "/precache-manifest.(.*)", "dest": "app/precache-manifest.$1" },
		{
			"src": "/service-worker.js",
			"headers": { "cache-control": "s-maxage=0" },
			"dest": "app/service-worker.js"
		},
		{ "src": "/sockjs-node/(.*)", "dest": "app/sockjs-node/$1" },
		{
			"src": "/(.*)",
			"headers": { "cache-control": "s-maxage=0" },
			"dest": "app/index.html"
		}
	]
}
